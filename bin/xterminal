#!/bin/bash
#
# start a x terminal emulator
#

function usage() {
    cat <<EOF
usage:
    $0 [ARGUMENTS]
EOF
}

TERMINATOR_DARK=dark
TERMINATOR_LIGHT=default


# dark=
# if [ -f ~/.darkness ]; then
#     dark=1
# fi

# update xrdb according to light preferences
if [ -n "$DISPLAY" ] && [[ `tty` =~ ^/dev/pts ]]; then
    if [ -n "$dark" ]; then
        xrdb -override -I$HOME < ~/.Xresources.dark 2>/dev/null
    else
        # xrdb -override < ~/.Xresources 2>/dev/null
        xrdb -override -I$HOME < ~/.Xresources.light 2>/dev/null
    fi
fi

if command -v terminator >/dev/null 2>&1; then
    terminator "$@"
elif command -v konsole >/dev/null 2>&1; then
    if [ -n "$@" ]; then
        konsole "$@"
    else
        konsole 
    fi
elif command -v termite >/dev/null 2>&1; then
    termite "$@"
elif [ -f /usr/bin/hyper ]; then
    hyper "$@"
elif command -v terminology >/dev/null 2>&1;  then
    terminology "$@"
elif command -v tilix >/dev/null 2>&1; then
    tilix "$@"
elif command -v urxvt >/dev/null 2>&1; then
    urxvt "$@"
elif command -v termite >/dev/null 2>&1; then
    termite "$@"
elif command -v aterm >/dev/null 2>&1; then
    aterm "$@"
else
    xterm "$@"
fi

